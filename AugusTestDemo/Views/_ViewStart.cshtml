@{
    //取得Controller、Action
    var currentController = ViewContext.RouteData.Values["Controller"].ToString();
    var currentAction = ViewContext.RouteData.Values["Action"].ToString();

    //需要前往後台登入的
    List<string> myBackstageLoginControllers = new List<string> { "BackstageLogin" };

    //需要前往後台的
    List<string> myBackstageControllers = new List<string> { "Backstage" };

    if (myBackstageLoginControllers.Contains(currentController))
    {
        Layout = "_BackstageLoginLayout";
    }
    else if (myBackstageControllers.Contains(currentController))
    {
        Layout = "_BackstageLayout";
    }
    else
    {
        Layout = "_Layout";
    }
}
